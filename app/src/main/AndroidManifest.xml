<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mans.abdullah.abdullah_mansour.converter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/reload"
        android:label="@string/app_name"
        android:roundIcon="@drawable/reload"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CurrencyActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Currency"
            />
        <activity android:name=".TimeActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Time"
            />
        <activity android:name=".SpeedActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Speed"
            />
        <activity android:name=".DistanceActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Distance"
            >

        </activity>
    </application>

</manifest>